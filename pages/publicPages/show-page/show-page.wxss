.container{
  background-color: #fff;
}
.dataArea{

  padding: 20rpx;
}
.head{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.headLeft{
  display: flex;
}
.headImg{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
  font-size: 0;
}
.headImg image{
  width: 100%;
  height: 100%;
}
.headRight{
  background-color: rgb(212, 212, 8);
  padding: 10rpx;
  border-radius: 10rpx;
  color: #fff;
}
.article{
  text-overflow: ellipsis;
  overflow: hidden;
  line-clamp: 3;
  -webkit-line-clamp: 3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
