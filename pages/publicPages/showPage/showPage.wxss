.imgs{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.showImgs{
  opacity: 1;
}
.imgsItem image{
  width: 100%;
  height: 100%;
  /* opacity: 0;
  transition: all 1s; */
}

/* 一张图片 */
.imgsOne .imgsItem{
  width: 100%;
  height: 420rpx;
}

/* 2张或者4张图片 */
.imgstwo {
  justify-content: space-between;
}
.imgstwo .imgsItem{
  width: calc( 100vw - (100vw / 2)  - 12px );
  height: 150px;
}

.imgstwo .imgsItem:nth-last-child(-n+2){
  margin-top: 5px;
}
.imgstwo .imgsItem:nth-child(-n+2){
  margin-top: 0px;
}
/* 3张图片 */
.imgsThree{
  justify-content: space-between;
}
.imgsThree .imgsItem{
  width: calc( 100vw / 3  - 9px );
  height: 130px;
}

.imgs .defaultImg{
  width: 0;
  height: 0;
}

